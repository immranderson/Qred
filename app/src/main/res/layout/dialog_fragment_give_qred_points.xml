<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/qred_points_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_funny"
        />

    <View
        android:id="@+id/qred_points_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_below="@+id/qred_points_iv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/qred_points_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Funny"
        android:layout_below="@+id/qred_points_separator"
        android:gravity="center"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/qred_points_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Makes people laugh! The life of the party."
        android:layout_below="@+id/qred_points_name_tv"
        android:gravity="center"
        android:textSize="15sp"
        />

    <SeekBar
        android:layout_marginTop="10dp"
        android:id="@+id/qred_points_seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qred_points_description_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >


        </SeekBar>

    <TextView
        android:id="@+id/qred_points_number_to_give_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Give 20 Funny Points!"
        android:layout_below="@+id/qred_points_seekBar"
        android:gravity="center"
        android:textSize="25sp"
        />


</RelativeLayout>